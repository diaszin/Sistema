<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Cliente - SD Ferramentas & Cia</title>

  <!-- Boostrap Links e Scripts ... -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/sweetalert.js"></script>
</head>

<body>
  <% if(erro.length > 0){ %>
  <script>
    new Swal({
      title: "<%=erro[0].title%>",
      icon: "error",
      text: "<%=erro[0].text%>",
    })
  </script>
  <% } %>

  <nav class="navbar navbar-expand-lg text-bg-secondary">
    <div class="container-fluid">
      <a class="navbar-brand active" href="/">SD&Cia</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/login/cliente">Sou cliente<span class="sr-only">(Login Cliente)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/login/funcionario">Sou funcionário<span class="sr-only">(Login
              Funcionário)</span></a>
        </li>
      </ul>
    </div>
  </nav>

  <section class="d-flex align-items-center justify-content-center flex-column" style="height: 90vh">
    <form action="/login/cliente" method="post">
      <div class="form-group">
        <label for="emailInput">Insira seu email</label>
        <input type="email" class="form-control" id="emailInput" name="email">
      </div>
      <div class="form-group">
        <label for="senhaInput">Insira sua senha</label>
        <input type="password" class="form-control" id="senhaInput" name="senha" aria-describedby="senhaHelp">
        <small id="senhaHelp" class="form-text text-muted">Nunca compartilhe sua senha para ninguém</small>
      </div>
      <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label">Concordo com os <a href="">termos e condições</a></label>
      </div>
      <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>
    <div class="mb-3 mt-2">
      <a href="/cadastro/cliente">Primeira vez? Faça o seu cadastro !</a>
    </div>
  </section>
</body>

</html>